@model List<Movie>

<h2>Lịch sử xem</h2>

@if (!Model.Any())
{
    <p>Bạn chưa xem phim nào.</p>
}
else
{
    <div class="movie-list">
        @foreach (var movie in Model)
        {
            <div class="movie-item">
                <a href="@Url.Action("WatchMovie", "Home", new { id = movie.MovieID })">
                    <img src="@movie.Thumbnail" alt="@movie.Title">
                    <p style=" width: 160px" id=" history">@movie.Title</p>
                </a>
            </div>
        }
    </div>
}
<style>
    .movie-list {
        display: flex;
        flex-wrap: wrap;
        gap: 15px;
        justify-content: flex-start;
        padding: 10px;
        max-height: 800px; /* Giới hạn chiều cao để bật cuộn */
        overflow-y: auto; /* Cho phép cuộn dọc */
    }

    .movie-item {
        width: 180px; /* Điều chỉnh kích thước cố định */
        text-align: center;
        background: rgba(255, 255, 255, 0.1);
        padding: 10px;
        border-radius: 8px;
        transition: transform 0.3s ease-in-out;
    }

        .movie-item:hover {
            transform: scale(1.05);
        }

        .movie-item img {
            width: 100%;
            height: 250px; /* Cố định chiều cao ảnh */
            object-fit: cover;
            border-radius: 8px;
        }

        .movie-item p {
            margin-top: 8px;
            font-weight: bold;
            color: #fff;
            font-size: 14px;
            text-align: center;
            white-space: nowrap;
            overflow: hidden;
            text-overflow: ellipsis;
        }

</style>