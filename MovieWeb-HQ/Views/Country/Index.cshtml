@model List<Country>

<h2>🌍 Danh sách Quốc gia</h2>

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
}
@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">@TempData["SuccessMessage"]</div>
}

<a href="@Url.Action("Create", "Country")" class="btn btn-add">➕ Thêm Quốc gia</a>

<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>Tên Quốc Gia</th>
            <th>Hành động</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var country in Model)
        {
            <tr>
                <td>@country.CountryID</td>
                <td>@country.CountryName</td>
                <td>
                    <a asp-controller="Country" asp-action="Edit" asp-route-id="@country.CountryID" class="btn btn-warning">Sửa</a>
                    <a asp-controller="Country" asp-action="Delete" asp-route-id="@country.CountryID" class="btn btn-danger" onclick="return confirm('Bạn có chắc muốn xóa?')">🗑️ Xóa</a>
                </td>
            </tr>
        }
    </tbody>
</table>
