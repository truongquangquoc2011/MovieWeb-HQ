@model Country

<div class="form-wrapper">
    <h2 class="form-title">Chỉnh sửa Quốc Gia</h2>

    <form asp-controller="Country" asp-action="Edit" method="post" class="form-container">
        <input type="hidden" asp-for="CountryID" />

        <label for="CountryName">Tên Quốc Gia:</label>
        <input type="text" asp-for="CountryName" required class="form-input" />

        <button type="submit" class="btn btn-save">💾 Lưu</button>
    </form>
</div>
<style>
    body {
        background: linear-gradient(to right, #141e30, #243b55);
        color: white;
        margin: 0;
        padding: 0;
    }

    .form-wrapper {
        max-width: 500px;
        margin: 80px auto;
        padding: 40px;
        background: rgba(255, 255, 255, 0.08);
        backdrop-filter: blur(12px);
        border-radius: 20px;
        box-shadow: 0 10px 25px rgba(0, 0, 0, 0.4);
        text-align: center;
    }

    .form-title {
        font-size: 28px;
        font-weight: 600;
        margin-bottom: 25px;
    }

    .form-container {
        display: flex;
        flex-direction: column;
        gap: 20px;
    }

        .form-container label {
            font-size: 18px;
            text-align: left;
        }

    .form-input {
        padding: 12px;
        font-size: 16px;
        border: none;
        border-radius: 10px;
        background: rgba(255, 255, 255, 0.9);
        color: #333;
        outline: none;
    }

        .form-input:focus {
            box-shadow: 0 0 8px #00c3ff;
        }

    .btn {
        padding: 12px 20px;
        font-size: 16px;
        border: none;
        cursor: pointer;
        border-radius: 8px;
        color: white;
        transition: 0.3s;
    }

    .btn-save {
        background-color: #007bff;
    }

        .btn-save:hover {
            background-color: #0056b3;
        }
</style>
