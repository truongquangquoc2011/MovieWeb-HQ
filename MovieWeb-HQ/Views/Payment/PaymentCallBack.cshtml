@model MovieWeb_HQ.Models.Momo.MomoExecuteResponseModel

@{
    ViewData["Title"] = "Kết quả thanh toán";
}

<div class="payment-wrapper">
    <div class="payment-card">
        <div class="momo-header">
            <img src="https://upload.wikimedia.org/wikipedia/vi/f/fe/MoMo_Logo.png" alt="MoMo Logo" />
            <h2>Thanh toán thành công</h2>
        </div>

        <div class="form-group">
            <label>💳 Mã đơn hàng:</label>
            <p>@Model.OrderId</p>
        </div>

        <div class="form-group">
            <label>💰 Số tiền:</label>
            <p>@Model.Amount VNĐ</p>
        </div>

        <div class="form-group">
            <label>📝 Nội dung:</label>
            <p>@Model.OrderInfo</p>
        </div>

        <p class="logout-note">🔄 Hãy đăng xuất để cập nhật hội viên</p>

        <div class="btn-group">
            <form asp-area="" asp-controller="Account" asp-action="Logout" method="post">
                <button class="btn" type="submit">🚪 Đăng xuất</button>
            </form>
        </div>
    </div>
</div>

<style>
    * {
        box-sizing: border-box;
    }

    body {
        background: linear-gradient(to right, #141e30, #243b55);
        color: white;
        margin: 0;
        padding: 0;
    }

    .payment-wrapper {
        display: flex;
        justify-content: center;
        align-items: center;

    }

    .payment-card {
        background-color: #fff;
        padding: 35px 40px;
        border-radius: 20px;
        border: 1px solid #ddd;
        box-shadow: 0 12px 40px rgba(0, 0, 0, 0.1);
        max-width: 500px;
        width: 100%;
        animation: fadeIn 0.5s ease-in-out;
        color: #333;
    }

    .momo-header {
        text-align: center;
        margin-bottom: 25px;
    }

    .momo-header img {
        max-height: 60px;
        margin-bottom: 10px;
    }

    .momo-header h2 {
            font-size: 1.6rem !important;
            color: #28a745 !important;
            margin: 0 !important;
    }

    .form-group {
        margin-bottom: 20px !important;
    }

    .form-group label {
            display: block !important;
            font-weight: 600 !important;
            margin-bottom: 6px !important;
        color: #444!important;
    }

    .form-group p {
        background: #f9f9f9!important;
            padding: 12px !important;
            border: 1px solid #ccc !important;
            border-radius: 8px !important;
            font-size: 1rem !important;
            margin: 0 !important;
            color: #333 !important;
    }

    .logout-note {
        text-align: center;
        font-style: italic;
        color: #d81b60;
        margin: 20px 0;
    }

    .btn-group {
        margin-top: 10px;
        display: flex;
        justify-content: center;
    }

    .btn {
        padding: 12px 20px;
        background-color: #d81b60;
        color: #fff;
        text-decoration: none;
        border-radius: 10px;
        transition: background 0.3s;
        font-weight: bold;
        font-size: 1rem;
        border: none;
        cursor: pointer;
    }

    .btn:hover {
        background-color: #ad1457;
    }

   
</style>
