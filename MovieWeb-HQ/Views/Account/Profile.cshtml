@model MovieWeb_HQ.Models.ApplicationUser
@{
    ViewData["Title"] = "Thông Tin Cá Nhân";
}

<div class="profile-container">
    <h2 class="profile-title">Thông Tin Cá Nhân</h2>
    <div class="profile-info">
        <p><strong>Họ và Tên:</strong> @Model.FullName</p>
        <p><strong>Username:</strong> @Model.UserName</p>
        <p><strong>Email:</strong> @Model.Email</p>
        <p><strong>Số Điện Thoại:</strong> @Model.PhoneNumber</p>
    </div>
</div>

<style>
    body {
        background: linear-gradient(to right, #141e30, #243b55);
        color: white;
        font-family: 'Quicksand', sans-serif;
        font-size: 20px; /* Tăng kích thước chữ chung */
    }

    .profile-container {
        max-width: 600px; /* Tăng chiều rộng */
        margin: 70px auto;
        padding: 40px;
        background: rgba(255, 255, 255, 0.15);
        backdrop-filter: blur(10px);
        border-radius: 20px;
        text-align: center;
        box-shadow: 0 10px 20px rgba(0, 0, 0, 0.3);
    }

    .avatar-wrapper {
        position: relative;
        display: inline-block;
    }

    .avatar {
        width: 150px; /* Tăng kích thước avatar */
        height: 150px;
        border-radius: 50%;
        border: 5px solid white;
        box-shadow: 0 6px 12px rgba(255, 255, 255, 0.25);
    }

    .profile-title {
        margin-top: 20px;
        font-size: 28px; /* Tăng kích thước tiêu đề */
        font-weight: 700;
    }

    .profile-info {
        display: flex;
        flex-direction: column;
        align-items: center;
    }

    .profile-info p {
        font-size: 18px!important; /* Tăng kích thước nội dung */
        margin: 12px 0 !important;
        padding: 12px !important;
        border-radius: 10px !important;
        background: rgba(255, 255, 255, 0.12) !important;
    }
</style>
