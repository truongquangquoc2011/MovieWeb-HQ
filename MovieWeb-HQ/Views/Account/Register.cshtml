@model MovieWeb_HQ.ViewModels.RegisterViewModel
@{
    ViewData["Title"] = "Đăng Ký";
}
<style>
    form {
        background: rgba(255, 255, 255, 0.15);
        backdrop-filter: blur(12px);
        padding: 25px;
        border-radius: 15px;
        width: 380px; /* Giảm chiều rộng */
        margin: 50px auto;
        text-align: center;
        color: white;
        box-shadow: 0px 0px 15px rgba(255, 255, 255, 0.2);
    }

        form label {
            display: block;
            text-align: left;
            margin-bottom: 8px;
            font-size: 16px; /* Giảm kích thước chữ */
            font-weight: bold;
        }

        form input {
            width: 100%;
            padding: 10px;
            margin-bottom: 10px;
            border: none;
            border-radius: 8px;
            background: rgba(255, 255, 255, 0.2);
            font-size: 14px; /* Giảm kích thước chữ */
            color: white;
        }

            form input::placeholder {
                color: rgba(255, 255, 255, 0.7);
                font-size: 14px;
            }

        form button {
            background: white;
            color: black;
            border: none;
            padding: 12px;
            width: 100%;
            border-radius: 8px;
            font-size: 16px; /* Giảm kích thước chữ */
            font-weight: bold;
            cursor: pointer;
            transition: 0.3s;
        }

            form button:hover {
                background: #ddd;
            }

    .text-danger {
        font-size: 12px; /* Giảm kích thước chữ lỗi */
        color: #ff4c4c;
        display: block; /* Đảm bảo lỗi xuống dòng */
        word-wrap: break-word; /* Xuống dòng nếu quá dài */
        max-width: 100%; /* Tránh tràn ra ngoài */
    }

</style>

<h2 style="text-align: center; color: white;">Đăng Ký</h2>

<form asp-action="Register" method="post">
    <label>Họ và Tên</label>
    <input asp-for="FullName" placeholder="Nhập họ và tên..." />
    <span asp-validation-for="FullName" class="text-danger"></span>

    <label>Username</label>
    <input asp-for="Username" placeholder="Nhập username..." />
    <span asp-validation-for="Username" class="text-danger"></span>

    <label>Email</label>
    <input asp-for="Email" type="email" placeholder="Nhập email..." />
    <span asp-validation-for="Email" class="text-danger"></span>

    <label>Số điện thoại</label>
    <input asp-for="PhoneNumber" placeholder="Nhập số điện thoại..." />
    <span asp-validation-for="PhoneNumber" class="text-danger"></span>

    <label>Mật khẩu</label>
    <input asp-for="Password" type="password" placeholder="Nhập mật khẩu..." />
    <span asp-validation-for="Password" class="text-danger"></span>

    <label>Xác nhận mật khẩu</label>
    <input asp-for="ConfirmPassword" type="password" placeholder="Nhập lại mật khẩu..." />
    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>

    <button type="submit">Đăng Ký</button>
    <div class="error-container">
        <span asp-validation-for="FullName" class="text-danger"></span>
        @if (!ViewData.ModelState.IsValid)
        {
            <div class="text-danger">
                @Html.ValidationSummary(false, "", new { @class = "text-danger" })
            </div>
        }
    
    </div>
    

</form>


<p style="text-align: center; margin-top: 20px; font-size: 16px; color: rgba(255, 255, 255, 0.8);">
    Đã có tài khoản?
    <a asp-action="Login" asp-controller="Account"
       style="color: #ffcc00; font-weight: bold; text-decoration: none; transition: 0.3s;">
        Đăng nhập ngay
    </a>
</p>
