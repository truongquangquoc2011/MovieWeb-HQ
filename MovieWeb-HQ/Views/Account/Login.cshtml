@model MovieWeb_HQ.ViewModels.LoginViewModel
@{
    ViewData["Title"] = "Đăng Nhập";
}
<style>
    form {
        background: rgba(255, 255, 255, 0.15);
        backdrop-filter: blur(12px);
        padding: 40px; /* Tăng padding để form to hơn */
        border-radius: 20px;
        width: 450px; /* Tăng kích thước tổng thể */
        margin: 50px auto;
        text-align: center;
        color: white;
        box-shadow: 0px 0px 15px rgba(255, 255, 255, 0.2);
    }

        form label {
            display: block;
            text-align: left;
            margin-bottom: 10px;
            font-size: 20px; /* Chữ to hơn */
            font-weight: bold;
        }

        form input {
            width: 100%;
            padding: 14px; /* Input to hơn */
            margin-bottom: 15px;
            border: none;
            border-radius: 35px;
            background: rgba(255, 255, 255, 0.25);
            font-size: 18px; /* Chữ nhập vào to hơn */
            color: white;
        }

            form input::placeholder {
                color: rgba(255, 255, 255, 0.7);
                font-size: 18px;
            }

        form button {
            background: white;
            color: black;
            border: none;
            padding: 18px; /* Nút to hơn */
            width: 100%;
            border-radius: 40px;
            font-size: 20px; /* Chữ lớn hơn */
            font-weight: bold;
            cursor: pointer;
            transition: 0.3s;
        }

            form button:hover {
                background: #ddd;
            }

    .text-danger {
        font-size: 16px; /* Chữ lỗi to hơn */
        color: #ff4c4c;
    }


</style>
<h2 style="text-align: center; color: white;">Đăng Nhập</h2>

@if (!ViewData.ModelState.IsValid)
{
    <div class="text-danger">
        @Html.ValidationSummary(false, "", new { @class = "text-danger" })
    </div>
}

<form asp-action="Login" method="post">
    <label>Username</label>
    <input asp-for="Username" placeholder="Nhập username..." />
    <span asp-validation-for="Username" class="text-danger"></span>

    <label>Password</label>
    <input asp-for="Password" type="password" placeholder="Nhập mật khẩu..." />
    <span asp-validation-for="Password" class="text-danger"></span>
    <p style="text-align: center; margin-top: 20px; font-size: 18px; color: rgba(255, 255, 255, 0.8);">
        Chưa có tài khoản?
        <a asp-action="Register" asp-controller="Account"
           style="color: #ffcc00; font-weight: bold; text-decoration: none; transition: 0.3s;">
            Đăng ký ngay
        </a>
    </p>

    <button type="submit">Đăng Nhập</button>

</form>
